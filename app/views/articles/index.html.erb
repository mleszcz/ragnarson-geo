<% title "Articles" %>

<% if current_user %>
    <h3><%= link_to '+New article', new_article_path %></h3>
<% end %>    

<div id="articles">
<% for article in @articles %>
  <div class="article">
      <h2>
        <%= link_to h(article.name), article %>
        <span class="comments">(<%= pluralize(article.comments.size, 'comment') %>)</span>
        <% if current_user %>
            <small><%= link_to "edit", edit_article_path(article) %></small>
        <% end %>
        <% if admin_user %>
            <small><%= link_to 'delete', article, :confirm => 'Are you sure?', :method => :delete %></small>
        <% end %>
      </h2>
      <div class="author">from <%=h article.author_name %> on <%= article.created_at.strftime('%b %d, %Y') %></div>
      <div class="content"><%= simple_format(article.content) %></div>
   </div>
<% end %>
</div>
